{
  "manifest_version": 3,
  "name": "Pokemon Showdown Team Preparation Assistant",
  "version": "1.0.9",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://play.pokemonshowdown.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://play.pokemonshowdown.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injectedScript.js",
        "simpleTeambuilder.js",
        "pokemonManager.js",
        "SpeedTierManager.js",
        "pokemonMoveCategories.js"
      ],
      "matches": ["*://play.pokemonshowdown.com/*"]
    }
  ]
}
